{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "./build",
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "removeComments": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
}